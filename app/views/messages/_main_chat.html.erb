<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      hogehoge
    </div>
  </div>
  <div class="left-header">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="messages">
  <div class="message">
    <div class="upper-message">
      <div class="message-name">Tom</div>
      <div class="message-data">2021/01/01</div>
    </div>
    <div class="lower-message">
      <div class="message-content">おはよう</div>
    </div>
  </div>
  <div class="message">
    <div class="upper-message">
      <div class="message-name">Tom</div>
      <div class="message-data">2021/01/01</div>
    </div>
    <div class="lower-message">
      <div class="message-content">こんばんは</div>
    </div>
  </div>
</div>
<%= form_with model: [@room, @message], class:'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="imaga-file">画像</span>
      <%= f.file_field :image, class:'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class:'form-submit' %>
  <% end %>
